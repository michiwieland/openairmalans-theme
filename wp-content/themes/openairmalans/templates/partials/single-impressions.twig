<article class="single-impression">

	{% set impressions = function( 'carbon_get_post_meta', post.ID, 'impression') %}
	{% set impressions = function( 'explode', ',', impressions) %}

	{% for impression in impressions %}

		{% set image = function( 'wp_get_attachment_image', impression, 'large') %}
		{{ image }}

	{% endfor %}

</article>
