{% extends "blueprint-single.twig" %}

{% block wrapper_in %}

	<article class="news" id="post-{{ post.id }}">

{% endblock %}

{% block post_title %}

	<header>
    	<a href="{{ post.link }}">
			<small class="meta">{{ post.post_date|date("d. M Y") }}</small>
			<h2>{{ post.title }}</h2>
		</a>
	</header>

{% endblock %}

{% block post_content %}

	<!-- Post content -->
	<div class="content">
    	{{ post.content }}
	</div>

{% endblock %}

{% block wrapper_out %}

	</article>

{% endblock %}
