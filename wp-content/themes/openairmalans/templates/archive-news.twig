{% extends "base.twig" %}

{% block content %}

	{% if posts %}

		{% for post in posts %}

			{% include 'partials/single-news.twig' %}

		{% endfor %}

	{% else %}

    	<p>{{ __( 'Zurzeit sind keine Neuigkeiten verfügbar', 'neocode' ) }}</p>

  	{% endif %}


	{% if pagination.prev %}
		<a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">Zurück</a>
    {% endif %}

    {% if pagination.next %}
    	<a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">Weiter</a>
    {% endif %}

{% endblock %}