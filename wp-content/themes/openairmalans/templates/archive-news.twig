{% extends "base.twig" %}

{% block content %}

	<section>

		<div class="inner">

			<div class="row-layout">

			{% if posts %}

				{% for post in posts %}

					{% include 'partials/single-news.twig' %}

				{% endfor %}

			{% else %}

		    	<p>{{ __( 'Zurzeit sind keine Neuigkeiten verfügbar', 'neocode' ) }}</p>

		  	{% endif %}

			<div class="pagination">
				{% if pagination.prev %}
					<a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">
						<i class="fa fa-chevron-left" aria-hidden="true"></i> <span>{{ __( 'Neuere Posts', 'neocode' ) }}</span>
					</a>
			  {% endif %}

		    {% if pagination.next %}
		    	<a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">
		    		<span>{{ __( 'Ältere Posts', 'neocode' ) }} <i class="fa fa-chevron-right" aria-hidden="true"></i>
		    	</a>
		    {% endif %}
			</div>


			</div>

		</div>

	</section>

{% endblock %}
