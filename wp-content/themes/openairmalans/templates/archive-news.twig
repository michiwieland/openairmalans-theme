{% extends "base.twig" %}

{% block content %}

	<section>

		<div class="inner">

			<div class="row-layout">

			{% if posts %}

				{% for post in posts %}

					{% include 'partials/single-news.twig' %}

				{% endfor %}

			{% else %}

		    	<p>{{ __( 'Zurzeit sind keine Neuigkeiten verfügbar', 'neocode' ) }}</p>

		  	{% endif %}

			{% if pagination.prev %}
				<a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">
					<span class="fa fa-chevron-left">{{ __( 'Vorheriger Post', 'neocode' ) }}</a>
		    {% endif %}

		    {% if pagination.next %}
		    	<a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">
		    		{{ __( 'Nächster Post', 'neocode' ) }}<span class="fa fa-chevron-right"></span>
		    	</a>
		    {% endif %}

			</div>
		</div>
	</section>

{% endblock %}
