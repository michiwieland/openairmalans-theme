{# Post Wrapper in #}
{% block wrapper_in %}

  <article class="single-news">

{% endblock %}

  {% if post.thumbnail %}

    {# Post thumbnail #}
    {% block post_thumbnail %}

    {% endblock %}

  {% endif %}

  {# Post title #}
  {% block post_title %}

    <!-- Meta Information -->
    <header>
      <h2>{{ post.title }}</h2>
    </header>

  {% endblock %}

{# Post content #}
{% block post_content %}

  <!-- Post content -->
  <div class="content">
    {{ post.content }}
  </div>

{% endblock %}

{# Post Wrapper out #}
{% block wrapper_out %}

  </article>

{% endblock %}
