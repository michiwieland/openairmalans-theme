{% extends "section.twig" %}

{% block content %}

  {% if posts %}

    {% for post in news %}


      <article class="news">

        <!-- Meta Information -->
        <header>
          <a href="{{ post.link }}">
            <h2>{{ post.title }}</h2>
          </a>
        </header>

        {% if post.thumbnail %}

          <!-- Post Thumbnail -->
          <div class="post-thumbnail">
            <a href="{{ post.link }}">
              <img src="{{ post.thumbnail.src('neocode-featured-image')|resize(300, 200, 'center') }}" alt="{{ post.title }}">
            </a>
          </div>

        {% endif %}

        <!-- Post content -->
        <div class="content">
          {{ post.get_preview(20) }}
        </div>

      </article>


      {% endfor %}


  {% else %}

    <p>{{ __( 'Zurzeit sind keine Neuigkeiten verf√ºgbar', 'neocode' ) }}</p>

  {% endif %}

{% endblock %}

{% block appendix %}
  <a class="button" href="{{ function( 'get_post_type_archive_link', 'news' ) }}">{{ __( 'Alle News Meldungen', 'neocode' ) }}</a>
{% endblock %}
