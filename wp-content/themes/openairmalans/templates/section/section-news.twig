{% extends "section.twig" %}

{% block content %}

  {% if posts %}

    {% for post in news %}

      {% if post.thumbnail %}

        <!-- Post Thumbnail -->
        <div class="post-thumbnail">
          <a href="{{ post.link }}">
            <img src="{{ post.thumbnail.src('neocode-featured-image') }}" alt="{{ post.title }}">
          </a>
        </div>

      {% endif %}

      <!-- Meta Information -->
      <header>
        <h2>{{ post.title }}</h2>
      </header>

      <!-- Post content -->
      <div class="content">
        {{ post.content }}
      </div>

      {% endfor %}

      <a class="button" href="{{ function( 'get_post_type_archive_link', 'news' ) }}">{{ __( 'Alle News Meldungen', 'neocode' ) }}</a>

  {% else %}

    <p>{{ __( 'Zurzeit sind keine Neuigkeiten verf√ºgbar', 'neocode' ) }}</p>

  {% endif %}

{% endblock %}