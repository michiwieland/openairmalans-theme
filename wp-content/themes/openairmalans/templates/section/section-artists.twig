{# Load each section by template #}
{% extends "section.twig" %}

{% block content %}

	{% if artists %}

		{% for post in artists %}

			<div class="artist">

			  {# <?php the_post_thumbnail('full', [
			    'class' => 'image',
			    'alt' => carbon_get_post_meta( get_the_ID(), 'artist-name' ); ]); ?>#}

				<a href="{{ function( 'carbon_get_post_meta', post.ID, 'artist-url' ) }}"
			     	class="overlay"
			     	data-lity data-title="{{ function( 'carbon_get_post_meta', post.ID, 'artist-name' ) }}"
			     	data-desc="{{ function( 'carbon_get_post_meta', post.ID, 'artist-description' ) }}">
			    	<p>{{ function( 'carbon_get_post_meta', post.ID, 'artist-name' ) }}</p>
			  	</a>

			</div>

		{% endfor %}

	{% else %}

		<p>{{ __( 'Die Künstler werden bald veröffentlicht.', 'neocode' ) }}</p>

	{% endif %}

{% endblock %}